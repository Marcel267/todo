{% extends 'base.html.twig' %} {% block title %}
{{ controller_name }}
{% endblock %} {% block body %}
<section class="h-screen w-full overflow-auto">
  <div class="mx-auto max-w-5xl p-8 ">

    <span class="flex items-center pb-5">
      <i class="fa-solid fa-{{ icon }} pr-3 text-xl"></i>
      <h1 class="text-4xl">{{ title }}</h1>
    </span>

    <input type="text" placeholder="Neue Notiz"
      class="mb-6 text-lg w-full rounded-xl border-none bg-slate-100 p-4 shadow-md dark:bg-slate-700">

    <ul class="text-lg">
      {% for note in notes %}
      <li class="mb-3 flex items-center rounded-xl bg-slate-100 p-4 shadow-md dark:bg-slate-700">
        <input type="checkbox" id="" value="" class="mr-2 w-5 h-5  bg-slate-300 checked:text-slate-900 rounded-md  focus:ring-slate-900 dark:focus:ring-slate-700
       dark:bg-slate-400  dark:focus:bg-slate-900 dark:checked:bg-slate-900 focus:ring-2 hover:cursor-pointer" />
        {{ note.content }} - {{ note.createdDate|date('d.m.Y, H:i:s') }}
        <span class="ml-auto">
          {# <i class="fa-solid fa-pencil ml-2 hover:text-slate-300 hover:cursor-pointer"></i> #}
          <i class="fa-solid fa-trash ml-2 hover:text-red-500 hover:cursor-pointer"></i>
        </span>
      </li>
      {% endfor %}
    </ul>

  </div>
</section>

{% endblock %}